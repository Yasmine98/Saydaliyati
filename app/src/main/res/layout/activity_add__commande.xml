<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Add_Commande">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Téléchargment de la photo" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textView3"/>

    <ImageView
            android:id="@+id/IdProf"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/close"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp" android:layout_marginStart="4dp"/>

    <Button
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/loginbutton_selector"
            android:padding="3dp"
            android:text="@string/upload"
            android:textColor="@color/background_color"
            android:textSize="17sp"
            android:textStyle="bold" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/IdProf" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"/>

    <TextView
            android:text="Message au pharmacie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textSize="18sp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/fab"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/msg_pharma" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:hint="Message"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/display_" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/msg_pharma" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="160dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="163dp"
            android:text="@string/Add_commande"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar5" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/display_" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="182dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="181dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>