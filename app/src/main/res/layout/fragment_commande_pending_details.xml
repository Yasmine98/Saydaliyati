<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   tools:context=".Commande_pending_details"
                                                   android:id="@+id/frameLayout3">

    <TextView
            android:text="DÃ©tails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView16"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titre_commande"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="177dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="177dp" android:textSize="18sp"/>
    <TextView
            android:text="Photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/titre_commande"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textSize="14sp"/>
    <TextView
            android:text="Pharmacie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" android:layout_marginTop="8dp"
    />
    <TextView
            android:text="Message au pharmacie (optionnel)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" android:layout_marginTop="8dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="100dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/constraintLayout">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="0dp" app:srcCompat="@drawable/error"
                android:id="@+id/commande_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:scaleType="fitXY"/>
        <TextView
                android:text="ID photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintStart_toEndOf="@+id/commande_image" android:layout_marginStart="4dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_id" android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                app:layout_constraintStart_toEndOf="@+id/commande_image" android:layout_marginStart="4dp"/>
        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp" app:srcCompat="@drawable/zoom"
                android:id="@+id/zoom_img" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_id" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="90dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:id="@+id/constraintLayout2"
            android:background="@color/white_greyish">

        <TextView
                android:text="Nom de la pharmacie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pharma_name" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
        />
        <TextView
                android:text="Adresse de la pharmacie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pharma_adr" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/pharma_name"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commande_etat" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/pharma_adr" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp" android:text="Etat de la commande"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView16" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView14" android:background="@color/white_greyish"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="70dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView17" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white_greyish">

        <TextView
                android:text="Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView18" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="Date de la commande"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date_commande" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView18" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

   </androidx.constraintlayout.widget.ConstraintLayout>